@model Tarbya.Models.Event

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-3 offset-9">
        <div class="box-title">
            <h3>تعديل الزيارة</h3>
        </div>
    </div>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group col-4">
            <label>اسم الزيارة</label>
            <div>
                @Html.EditorFor(model => model.eventName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.eventName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-4">
            <label>تاريخ الزيارة</label>
            <div>
                @Html.EditorFor(model => model.dateOFEvent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dateOFEvent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-12">
            <label>التفاصيل</label>
            <div>
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-6">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-red col-6" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("العودة الى قائمة الزيارات", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
