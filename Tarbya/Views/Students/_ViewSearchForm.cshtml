@model Tarbya.ViewModels.SearchViewModel

@using (Html.BeginForm())
    {
<div class="row">
            <div class="form-group col-3">
                <label>البحث بالاسم</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.searchString1, new { @class = "form-control" } )
                    <div class="input-group-prepend">
                        <input type="submit" value="Search" class="btn btn-search" />
                    </div>
                </div>
            </div>
            <div class="form-group col-4">
                <label>البحث بالرقم القومى</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.searchString2, new { @class = "form-control" })
                    <div class="input-group-prepend">
                        <input type="submit" value="Search" class="btn btn-search" />
                    </div>
                </div>
            </div>
            <div class="form-group col-3">
                <label>البحث برقم المحمول</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.searchString3, new { @class = "form-control" })
                    <div class="input-group-prepend">
                        <input type="submit" value="Search" class="btn btn-search" />
                    </div>
                </div>
            </div>
        </div>
    }