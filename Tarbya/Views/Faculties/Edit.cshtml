@model Tarbya.Models.Faculty

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-3 offset-9">
        <div class="box-title">
            <h3>تعديل الكلية</h3>
        </div>
    </div>
</div>
<br>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label class="col-md-2">الكلية</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.facultyName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.facultyName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-red" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("الرجوع الى قائمة الكليات", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
